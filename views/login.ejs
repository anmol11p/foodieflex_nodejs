<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="/styles/output.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <%- include("partials/header")%>
    <div
      class="relative text-white min-h-screen flex items-center justify-center"
    >
      <!-- Background  -->
      <div
        class="absolute inset-0 z-0 bg-[url('/assets/login.webp')] bg-cover bg-center blur-lg"
      >
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10"
        ></div>
      </div>
      <!-- Login Form  -->
      <div
        class="relative z-20 p-6 sm:w-[400px] rounded-2xl border border-green-200 shadow-lg shadow-green-700/40 overflow-hidden"
      >
        <form
          class="flex flex-col gap-5 z-20 relative"
          method="post"
          action="/auth/login"
        >
          <h2 class="text-2xl font-bold text-center mb-4">Welcome Back</h2>

          <!-- Email Field  -->
          <div>
            <label htmlFor="email" name="email" class="block text-sm mb-1">
              Email
            </label>
            <input
              type="text"
              name="email"
              id="email"
              placeholder="you@example.com"
              class="w-full p-2 text-white bg-transparent border border-green-300 rounded-md focus:outline-none focus:ring-2 focus:ring-white"
            />
          </div>
          <div class="relative">
            <label htmlFor="password" class="block text-sm mb-1">
              Password
            </label>
            <input
              type="password"
              name="password"
              id="password"
              autoComplete="off"
              placeholder="••••••••"
              class="w-full p-2 pr-10 text-white bg-transparent border border-green-300 rounded-md focus:outline-none focus:ring-2 focus:ring-white"
            />
          </div>

          <button
            type="submit"
            class="group relative overflow-hidden px-6 py-2 font-semibold text-white border rounded-md cursor-pointer shadow-md hover:shadow-blue-500 transition-all duration-300"
          >
            <span
              class="absolute inset-0 w-full h-full bg-gradient-to-r from-blue-400 to-green-700 translate-x-[-100%] group-hover:translate-x-0 transition-transform duration-500 ease-out opacity-80"
            ></span>
            <span class="relative z-10">Login</span>
          </button>
          <!-- Link to Register  -->
          <p class="text-sm text-center mt-2">
            Don’t have an account?
            <a href="/signup" class="text-blue-400 hover:underline">
              Register here
            </a>
          </p>
          <!-- link to auth github,google -->
          <div class="flex gap-3 flex-col items-center justify-center">
            <span> Or login with</span>
            <div class="flex items-center gap-5">
              <!-- Google Button -->
              <a
                href="/google"
                class="flex items-center justify-center border-gray-300 hover:bg-red-500 hover:text-white transition-all duration-100 rounded-full p-2 shadow-md"
              >
                <i class="fab fa-google"></i>
              </a>

              <!-- GitHub Button -->
              <a
                href="/github"
                class="flex items-center justify-center border-gray-300 hover:bg-gray-500 hover:text-white transition-all duration-100 rounded-full p-2 shadow-md"
              >
                <i class="fab fa-github text-xl"></i>
              </a>
            </div>
          </div>

          <% if (Array.isArray(errors) && errors.length > 0) { %>
          <div id="flash-container">
            <% errors.forEach((error) => { %>
            <p
              class="text-sm border-l-4 border-red-500 bg-white text-black py-2 pl-3 shadow-sm rounded-sm mb-2"
            >
              <%= error %>
            </p>
            <% }) %>
          </div>
          <% } %>
        </form>
      </div>
    </div>

    <%- include("partials/footer")%>
    <script>
      setTimeout(() => {
        const flash = document.getElementById("flash-container");
        if (flash) {
          flash.style.transition = "opacity 0.5s ease";
          flash.style.opacity = "0";
          setTimeout(() => flash.remove(), 500);
        }
      }, 2000);
    </script>
  </body>
</html>
